@{
    ViewData["Title"] = "Espace Candidat";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3>👤 Bienvenue dans votre espace candidat</h3>
        </div>
        <div class="card-body bg-light text-center">
            <a class="btn btn-outline-primary btn-lg m-2" asp-controller="Candidats" asp-action="Offres">📋 Voir les offres</a>
            <a class="btn btn-outline-success btn-lg m-2" asp-controller="Candidats" asp-action="MesCandidatures">📄 Mes candidatures</a>
        </div>
    </div>
</div>
