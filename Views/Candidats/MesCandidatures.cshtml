@model IEnumerable<FrontOfficeRH1.Models.Candidature>

@{
    ViewData["Title"] = "Mes Candidatures";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3>📄 Mes Candidatures</h3>
        </div>
        <div class="card-body bg-light">
            @if (!Model.Any())
            {
                <p class="text-center text-muted">Aucune candidature déposée pour le moment.</p>
            }
            else
            {
                <table class="table table-bordered table-striped">
                    <thead class="table-secondary">
                        <tr>
                            <th>Offre</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var candidature in Model)
                        {
                            <tr>
                                <td>@candidature.OffreEmploi?.Titre</td>
                                <td>@candidature.Statut</td>
                                <td>
                                    @if (candidature.Statut == "EnAttente")
                                    {
                                        <a asp-action="Annuler"
                                           asp-route-id="@candidature.Id"
                                           class="btn btn-sm btn-danger">
                                            Annuler
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Aucune action</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
