@{
    ViewData["Title"] = "Demander un congé";
}

<h2 class="text-primary">📝 Demande de congé</h2>

<form asp-action="DemandeConge" method="post" class="mt-3">
    <div class="form-group">
        <label>Date début</label>
        <input type="date" name="dateDebut" class="form-control" required />
    </div>
    <div class="form-group mt-2">
        <label>Date fin</label>
        <input type="date" name="dateFin" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-sm btn-primary mt-3">📤 Envoyer</button>
</form>
